<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:background="@drawable/frozendreams"
    tools:context=".MainActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardchat"
        android:layout_width="match_parent"
        android:layout_height="620dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="71dp"
        android:background="#fff"
        app:cardCornerRadius="25dp"
        app:cardElevation="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/button2">
    </ListView>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:src="@drawable/login"
        android:layout_marginLeft="0dp"></ImageView>
    <TextView
        android:id="@+id/txtusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="35dp"
        android:text="user name"></TextView>
    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:backgroundTint="#BBDCF7"
        android:drawableLeft="@drawable/kembali"
        android:text="Kembali"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="220dp"
        android:textColor="#000" />
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:background="@drawable/button"
        android:backgroundTint="#BBDCF7"
        style="?android:attr/borderlessButtonStyle"
        android:drawableLeft="@drawable/tambah"
        android:text="Buat Biodata Baru"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></Button>

</RelativeLayout>